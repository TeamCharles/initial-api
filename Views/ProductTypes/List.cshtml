@model IEnumerable<Bangazon.Models.Product>
@using Bangazon.Models;

@{
    ViewData["Title"] = "Product Listing";
}

<p>
    <a asp-action="Create">Sell Something</a>
</p>

@foreach (Product item in Model)
{
    <div class="row">
        <div class="col-md-3">@Html.DisplayFor(modelItem => item.Name)</div>
        <div class="col-md-3">$@Html.DisplayFor(modelItem => item.Price)</div>
        <div class="col-md-3">@Html.DisplayFor(modelItem => item.DateCreated)</div>
        <div class="col-md-3"><a asp-controller="Products" asp-action="Detail" asp-route-id="@item.ProductId">Details</a></div>
    </div>
}