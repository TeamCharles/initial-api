@model BangazonWeb.ViewModels.UserCreate

@{
    ViewData["Title"] = "New User";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="New">
    <div class="form-horizontal">
        <h4>User</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="NewUser.FirstName" class="col-md-2 control-label">First Name</label>
            <div class="col-md-10">
                <input asp-for="NewUser.FirstName" class="form-control" />
                <span asp-validation-for="NewUser.FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NewUser.LastName" class="col-md-2 control-label">Last Name</label>
            <div class="col-md-10">
                <input asp-for="NewUser.LastName" class="form-control" />
                <span asp-validation-for="NewUser.LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NewUser.StreetAddress" class="col-md-2 control-label">Street Address</label>
            <div class="col-md-10">
                <input asp-for="NewUser.StreetAddress" class="form-control" />
                <span asp-validation-for="NewUser.StreetAddress" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NewUser.City" class="col-md-2 control-label">City</label>
            <div class="col-md-10">
                <input asp-for="NewUser.City" class="form-control" />
                <span asp-validation-for="NewUser.City" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NewUser.State" class="col-md-2 control-label">State</label>
            <div class="col-md-10">
                <input asp-for="NewUser.State" class="form-control" />
                <span asp-validation-for="NewUser.State" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NewUser.ZipCode" class="col-md-2 control-label">Zip Code</label>
            <div class="col-md-10">
                <input asp-for="NewUser.ZipCode" class="form-control" />
                <span asp-validation-for="NewUser.ZipCode" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create User" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-controller="Products" asp-action="Index">Back to Products</a>
</div>