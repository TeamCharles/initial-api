@model BangazonWeb.ViewModels.ProductEdit

<form asp-action="Edit" asp-route-id="@Model.CurrentProduct.ProductId">
    <div class="form-horizontal">
        <h4>Edit</h4>
        <hr>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div>
            <label asp-for="CurrentProduct.Name" class="col-md-2 control-label">Product Name</label>
            <div class="col-md-10">
            <input asp-for="CurrentProduct.Name" class="form-control" placeholder="@Html.DisplayFor(model => model.CurrentProduct.Name)" />
            <span asp-validation-for="CurrentProduct.Name" class="text-danger" />
            </div>
        </div>

        <div>
            <label asp-for="CurrentProduct.Price" class="col-md-2 control-label">Price</label>
            <div class="col-md-10">
            <input asp-for="CurrentProduct.Price"  class="form-control" placeholder="@Html.DisplayFor(model => model.CurrentProduct.Price)" />
            <span asp-validation-for="CurrentProduct.Price" class="text-danger" />
            </div>
        </div>

        <div>
            <label asp-for="CurrentProduct.Description" class="col-md-2 control-label">Description</label>
            <div class="col-md-10">
            <input asp-for="CurrentProduct.Description" class="form-control" placeholder="@Html.DisplayFor(model => model.CurrentProduct.Description)" />
            <span asp-validation-for="CurrentProduct.Description" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-validation-for="CurrentProduct.ProductTypeId" class="col-md-2 control-label">Product Type</label>
            <div class="col-md-10">
                <span class="text-danger"></span>

                 @Html.DropDownList("CurrentProduct.ProductTypeId", @Model.ProductTypes, "SELECT" , new { @class = "dropdown" })

            </div>

            @Html.Hidden("CurrentProduct.ProductId", Model.CurrentProduct.ProductId)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input asp-controller="Products" asp-action="Edit" asp-route-id="@Model.CurrentProduct.ProductId" type="submit" value="Save Changes" class="btn btn-default" />
            </div>
        </div>

    </div>
    </div>
</form >



<div>
    &lt;&lt; <a asp-controller="ProductTypes" asp-action="List" asp-route-id="@Model.CurrentProduct.ProductTypeId">Back to List</a>
</div>