@model Bangazon.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<h2>@Html.DisplayFor(model => model.Name)</h2>

<div class="row">
    <div class="col-md-3">@Html.DisplayFor(model => model.Description)</div>
    <div class="col-md-3">@Html.DisplayFor(model => model.Price)</div>
    <div class="col-md-3">@Html.DisplayFor(model => model.DateCreated)</div>
    <div class="col-md-3"><a asp-action="Purchase" asp-route-id="@Model.ProductId">Add to Cart</a></div>
</div>

<div>
    Seller: @Html.DisplayFor(model => model.User.FirstName) @Html.DisplayFor(model => model.User.LastName)
</div>

<div>
    &lt;&lt; <a asp-controller="ProductTypes" asp-action="List" asp-route-id="@Model.ProductTypeId">Back to List</a>
</div>
